.init-fail-tips {
    text-align: center;
    padding-top: 200rpx;
}
.face-detect-container {
    height: 100vh;
    background-color: #ffffff;
    padding-top: 200rpx;
    box-sizing: border-box;
}

.face-detect-container.valid {
    background-color: #0cb869;
}
.face-detect-container.invalid {
    background-color: #b80c12;
}

.face-camera-container {
    width: 600rpx;
    height: 600rpx;
    background-color: #fff;
    margin: auto;
    border-radius: 50%;
    overflow: hidden;
}

.face-camera {
    width: 100%;
    height: 100%;
}

.status-text {
    text-align: center;
    color: aliceblue;
}
